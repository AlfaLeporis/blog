@model List<Blog.ViewModels.TagsModuleViewModel>

<div class="box">
    <h2>
        Tagi
    </h2>
    @for (int i = 0; i < Model.Count; i++)
    {
        <div style="font-size: @(Model[i].Size.ToString().Replace(',','.'))em; display: inline;"><a href="@Url.Action("Tag", "Tags", new{id = Model[i].TagName})">@Model[i].TagName (@Model[i].Count)</a></div>
    }
</div>
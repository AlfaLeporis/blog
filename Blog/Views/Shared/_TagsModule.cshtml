@model List<Blog.ViewModels.TagsModuleViewModel>

<div class="module">
    <div class="module-header">
        Tagi
    </div>
    <div class="module-content">
        @for(int i=0; i<Model.Count; i++)
        {
            <div style="font-size: @(Model[i].Size.ToString().Replace(',','.'))em; display: inline;"><a href="@Url.Action("Tag", new{id = Model[i].TagName})">@Model[i].TagName (@Model[i].Count)</a></div>
        }
    </div>
</div>
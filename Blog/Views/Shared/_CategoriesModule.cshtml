@model List<Blog.ViewModels.CategoriesModuleViewModel>

<div class="box">
    <h2 class="module-header">
        Kategorie
    </h2>
    <ul>
        @for (int i = 0; i < Model.Count; i++)
        {
            if (Model[i].Count > 0)
            {
                <li>
                    <a href="@Url.Action("Category", "Categories", new{id = Model[i].Alias})" style="width: 100%">
                        @Model[i].Name (@Model[i].Count)
                    </a>
                </li>
            }
        }
    </ul>
</div>
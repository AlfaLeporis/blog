@model List<Blog.ViewModels.RecentCommentsModuleViewModel>

<div class="box">
    <h2>
        Najnowsze komentarze
    </h2>
    <ul>
        @for (int i = 0; i < Model.Count; i++)
        {
            <li>
                <a href="@Url.Action("Article", "Articles", new{id = Model[i].Article.Alias})#@Model[i].Comment.ID" style="width: 100%">
                    @Model[i].Comment.AuthorName napisał: @Model[i].Comment.Content
                </a>
            </li>
        }
    </ul>
</div>
@model List<Blog.ViewModels.RecentCommentsModuleViewModel>

<div class="module">
    <div class="module-header">
        Najnowsze komentarze
    </div>
    <ul>
        @for (int i = 0; i < Model.Count; i++)
        {
            <li>
                <a href="@Url.Action("Article", "Articles", new{id = Model[i].Article.Alias})#@Model[i].Comment.ID" class="btn btn-default" style="width: 100%">
                    <div class="pull-left">@Model[i].Comment.AuthorName napisał: @Model[i].Comment.Content </div>
                </a>
            </li>
        }
    </ul>
</div>
@model List<Blog.ViewModels.CategoryViewModel>

<select class="form-control" name="CategoryID">
    @for (int i = 0; i < Model.Count; i++)
    {
        if (ViewBag.SelectedCategoryID == Model[i].ID)
        {
            <option value="@Model[i].ID" selected="selected">@Model[i].Title</option>
        }
        else
        {
            <option value="@Model[i].ID">@Model[i].Title</option>
        }
    }
</select>
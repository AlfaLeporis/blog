@model Blog.ViewModels.VersionsViewModel

<table class="table table-bordered" style="margin-top: 30px;">
    <tbody>
        <tr>
            <th>Numer wersji</th>
            <th>Data utworzenia</th>
            <th>Akcje</th>
        </tr>
        @for (int i = 0; i < Model.Versions.Count; i++)
        {
            <tr>
                <td style="width: 30%;">@Model.Versions[i].Version</td>
                <td style="width: 40%;">@Model.Versions[i].SaveDate</td>
                
                <td style="width: 30%;">
                    @if(Model.Target == Blog.Models.TargetType.Site)
                    {
                        @Html.ActionLink("Podgląd", "EditSite", "Sites", new { area = "Administrator", id = Model.Versions[i].TargetID }, new { @class = "btn btn-primary table-button" })
                    }
                    else
                    {
                        @Html.ActionLink("Podgląd", "EditSite", "Sites", new { area = "Administrator", id = Model.Versions[i].TargetID }, new { @class = "btn btn-primary table-button" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>